@if (country is null)
{
    // Muestra un componente de carga mientras se obtiene la información del país.
    <Loading />
}
else
{
    // Muestra un diálogo modal con el formulario de edición del país.
    <MudDialog>
        <DialogContent>
            <!-- Formulario de edición del país. -->
            <CountryForm @ref="countryForm" Country="country" OnValidSubmit="EditAsync" ReturnAction="Return" />
        </DialogContent>
    </MudDialog>
}


