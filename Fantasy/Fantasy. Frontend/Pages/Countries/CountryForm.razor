<!-- Bloquea la navegación si el formulario ha sido modificado y no se ha guardado. -->
<NavigationLock OnBeforeInternalNavigation="OnBeforeInternalNavigation" />

<!-- Formulario de edición con validación de datos. -->
<EditForm EditContext="editContext" OnValidSubmit="OnValidSubmit">
    <!-- Habilita la validación basada en atributos de validación. -->
    <DataAnnotationsValidator />

    <!-- Campo de texto para ingresar el nombre del país. -->
    <MudTextField Label="@Localizer["Country"]"  
                  @bind-Value="@Country.Name"   
                  For="@(() => Country.Name)"  
                  Class="mb-4" />              

    <!-- Botón para regresar sin guardar cambios. -->
    <MudButton Variant="Variant.Outlined" 
               StartIcon="@Icons.Material.Filled.ArrowBack" 
               Color="Color.Info" 
               OnClick="ReturnAction">
        @Localizer["Return"]
    </MudButton>

    <!-- Botón para guardar los cambios en el formulario. -->
    <MudButton Variant="Variant.Outlined" 
               StartIcon="@Icons.Material.Filled.Check"
               Color="Color.Primary" 
               ButtonType="ButtonType.Submit"> 
        @Localizer["SaveChanges"]
    </MudButton>
</EditForm>


